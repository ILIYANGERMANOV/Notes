<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_light_blue</item>
        <item name="colorPrimaryDark">@color/color_primary_light_blue_dark</item>
        <item name="colorAccent">@color/color_accent_pink</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">

    </style>

    <style name="MyCardView" parent="CardView">
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="MyToolbarTheme" parent="AppThemeBase">
        <item name="android:textColorPrimary">@color/text_color_primary_white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
