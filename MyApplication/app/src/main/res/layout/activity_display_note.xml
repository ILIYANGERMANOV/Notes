<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gcode.notes.activities.display.DisplayNoteActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/display_note_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/display_note_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/MyToolbarTheme"
            app:popupTheme="@style/Theme.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/display_note_app_bar_layout"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                style="@style/MyCardView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="16dp"
                android:background="@color/card_view_background">

                <LinearLayout
                    android:id="@+id/display_note_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <include layout="@layout/display_header_layout" />

                    <ImageView
                        android:id="@+id/display_note_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@string/attached_image_desc"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/display_note_description_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="@string/placeholder_short"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/display_note_dates_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="23dp"
                        android:gravity="bottom|end"
                        android:text="Last modified: 21/10/2015 13:37\nCreated on: 13/10/2015 22:25"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/display_note_location_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:clickable="true"
                        android:text="Location: Sofia, Bulgaria"
                        android:textColor="@color/link_color"
                        android:textSize="14sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </FrameLayout>
    </ScrollView>

</RelativeLayout>
