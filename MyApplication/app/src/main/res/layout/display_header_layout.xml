<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="bottom"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/display_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_weight="1"
        android:text="@string/placeholder_short"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/display_star_image_button"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/star_button_content_description"
        android:src="@drawable/ic_star_border_black_36dp" />

</LinearLayout>