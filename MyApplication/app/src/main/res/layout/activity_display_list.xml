<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/display_list_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gcode.notes.activities.display.list.DisplayListBaseActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/display_list_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/display_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/MyToolbarTheme"
            app:popupTheme="@style/Theme.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/display_list_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/display_list_app_bar_layout"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                style="@style/MyCardView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="16dp"
                android:background="@color/card_view_background">

                <LinearLayout
                    android:id="@+id/display_list_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <include layout="@layout/display_header_layout" />

                    <com.gcode.notes.views.NonScrollableRecyclerView
                        android:id="@+id/display_list_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="21dp"
                        android:scrollbars="vertical"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/display_list_done_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_expand_more_black_24dp"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/compose_list_done_tasks_caption"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="17sp" />

                    <com.gcode.notes.views.NonScrollableRecyclerView
                        android:id="@+id/display_list_ticked_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="21dp"
                        android:scrollbars="vertical" />

                    <TextView
                        android:id="@+id/display_list_dates_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="23dp"
                        android:layout_weight="1"
                        android:gravity="bottom|end"
                        android:text="Last modified: 21/10/2015 13:37\nCreated on: 13/10/2015 22:25"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/display_list_location_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:clickable="true"
                        android:text="Location: Sofia, Bulgaria"
                        android:textColor="@color/link_color"
                        android:textSize="14sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </FrameLayout>
    </ScrollView>

</RelativeLayout>
