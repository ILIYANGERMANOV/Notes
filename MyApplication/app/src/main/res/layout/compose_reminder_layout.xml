<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/compose_set_reminder_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_alarm_add_black_24dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_alarm_add_black_24dp"
        android:freezesText="true"
        android:gravity="center_vertical"
        android:text="@string/compose_note_set_reminder_text"
        android:textAllCaps="false"
        android:textSize="19sp" />

    <RelativeLayout
        android:id="@+id/compose_reminder_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/reminder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_alarm_black_24dp" />

        <Button
            android:id="@+id/compose_reminder_pick_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/reminder_icon"
            android:layout_toRightOf="@+id/reminder_icon"
            android:background="?android:attr/selectableItemBackground"
            android:text="25 dekemvri"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <Button
            android:id="@+id/compose_reminder_pick_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/compose_reminder_pick_date_button"
            android:layout_toRightOf="@+id/compose_reminder_pick_date_button"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:minWidth="34dp"
            android:text="14:59"
            android:textAllCaps="false"
            android:textSize="17sp" />


        <ImageButton
            android:id="@+id/compose_reminder_remove_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_remove_circle_black_24dp" />

    </RelativeLayout>

</LinearLayout>