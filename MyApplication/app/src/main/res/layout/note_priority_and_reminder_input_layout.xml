<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/compose_note_priority_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/compose_note_priority_switch_text"
        android:textOff="Normal"
        android:textOn="Important"
        android:textSize="17sp"
        app:switchPadding="15dp" />

    <TextView
        android:id="@+id/compose_note_set_reminder_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_alarm_add_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/compose_note_set_reminder_text"
        android:textSize="19sp" />

</LinearLayout>