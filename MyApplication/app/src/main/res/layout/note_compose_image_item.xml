<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/note_compose_item_image_view"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/note_attached_image_desc"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/note_compose_item_delete_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/delete_image_button_desc"
        android:src="@drawable/ic_close_white_24dp" />

</FrameLayout>