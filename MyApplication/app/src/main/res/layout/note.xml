<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_item_card_view"
    style="@style/MyCardViewMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/note_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/note_layout_content_padding">

        <include
            android:id="@+id/note_title_text_view"
            layout="@layout/note_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/note_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/note_image_view_height"
            android:layout_marginTop="@dimen/note_small_padding"
            android:contentDescription="@string/attached_image_desc"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/note_description_text_view"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/note_small_padding"
            android:gravity="top"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/note_more_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/more_image_view_content_desc"
            android:src="@drawable/ic_more_horiz_14dp"
            android:visibility="gone" />

        <include
            android:id="@+id/note_attributes_layout"
            layout="@layout/note_attributes_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/note_big_padding" />

    </LinearLayout>

</android.support.v7.widget.CardView>