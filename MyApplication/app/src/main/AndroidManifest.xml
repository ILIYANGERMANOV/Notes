<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gcode.notes" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".notes.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.extra.ExploreActivity"
            android:label="@string/title_activity_explore" />
        <activity
            android:name=".activities.extra.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.compose.ComposeNoteActivity"
            android:label="@string/title_activity_compose_note" />
        <activity
            android:name=".activities.compose.ComposeListActivity"
            android:label="@string/title_activity_compose_list" />
        <activity
            android:name=".activities.display.DisplayNoteActivity"
            android:label="@string/title_activity_display_note" >
        </activity>
        <activity
            android:name=".activities.display.DisplayListActivity"
            android:label="@string/title_activity_display_list" >
        </activity>
    </application>

</manifest>
